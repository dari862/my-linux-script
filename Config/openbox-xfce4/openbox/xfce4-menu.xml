    <menu id="root-menu" label="Openbox 3">
		<item label="Run Program" icon="&icons;/search.png">
			<action name="Execute">
				<command>&rofibin;/launcher</command>
			</action>
		</item> 

		<separator/> <item label="VirtualBox" icon="&icons;/virtualbox.png"><action name="Execute"><command>virtualbox</command></action></item> 
		
		<item label="Terminal" icon="&icons;/terminal.png">
            <action name="Execute">
                <command>
                    x-terminal-emulator
                </command>
            </action>
        </item>
        <item label="Web Browser" icon="&icons;/web-browser.png">
            <action name="Execute">
                <command>
                    x-www-browser
                </command>
            </action>
        </item>
        <item label="File Manager" icon="&icons;/file-manager.png">
            <action name="Execute">
                <command>
                    x-file-manager
