                        <command>
                            x-www-browser "http://openbox.org/wiki/Help:Bindings"
                        </command>
                    </action>
                </item>	  	  
                <separator/>		        		
                <item label="Reload shortcuts" icon="&icons;/restart.png">
                    <action name="Reconfigure"/>
                </item>                          
        	</menu>
	            
            <item label="GTK Appearance" icon="&icons;/themes.png">>
