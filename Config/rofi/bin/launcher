## Default
rofi_dir="$HOME/.config/rofi"
STYLE="default"

rofi \
	-show drun \
	-modi run,drun,ssh \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal x-terminal-emulator \
	-kb-cancel Alt-F1 \
	-theme "$rofi_dir"/"$STYLE"/launcher.rasi
