rofi_dir="$HOME/.config/rofi"
STYLE="$(cat $rofi_dir/style)"

rofi -no-lazy-grab -show window -theme "$rofi_dir"/"$STYLE"/runner.rasi


rofi \
	-show run \
	-modi run \
	-scroll-method 0 \
	-terminal x-terminal-emulator \
	-theme "/runner.rasi
